@model HotelReservationManager.Web.Models.Binding.ReservationCreateBindingModel
<div class="mt-3 mb-5">
    <h1 class="text-center text-primary">Make Reservation</h1>
    <hr class="bg-secondary half-width hr-2" />
    <form class="mx-auto half-width" method="post" asp-controller="Reservations" asp-action="Create">
        <div class="form-group">
            <label asp-for="RoomNumber">Room Number</label>
            <input type="number" class="form-control" id="roomnumber" placeholder="Room Number, you want to reserved..." asp-for="RoomNumber">
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HotelUserUsername">Username</label>
            <input type="text" class="form-control" id="hoteluserusername" placeholder="Username of User, made this reservation..." asp-for="HotelUserUsername">
            <span asp-validation-for="HotelUserUsername" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label asp-for="DataOfIncoming">Date of Incoming Of Client</label>
                <input type="date" class="form-control" id="dateofincoming" placeholder="Data Of Incoming..." asp-for="DataOfIncoming">
                <span asp-validation-for="DataOfIncoming" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfOutgoing">Date Of Outgoing Of Client</label>
                <input type="date" class="form-control" id="dateofoutgoing" placeholder="DateOfOutgoing..." asp-for="DateOfOutgoing">
                <span asp-validation-for="DateOfOutgoing" class="text-danger"></span>
            </div>
            <div>
                <h4 class="text-center text-secondary">Included Breakfast?</h4>
                <hr class="hr-2 bg-secondary w-75  mt-3" />
                <div class="breakfast-holder mt-3 d-flex justify-content-lg-around">
                    <div class="form-check form-check-inline m-1">
                        <input class="form-check-input" type="radio" name="breakfast" id="yes" value="true">
                        <label class="form-check-label" asp-for="IncludedBreakfast">Yes</label>
                    </div>
                    <div class="form-check form-check-inline m-1">
                        <input class="form-check-input" type="radio" name="breakfast" id="no" value="false">
                        <label class="form-check-label" asp-for="IncludedBreakfast">No</label>
                    </div>
                </div>
                <hr class="hr-2 bg-dark w-75 mt-3" />
            </div>
            <div>
                <h4 class="text-center text-secondary">All Inclusive?</h4>>
                <hr class="hr-2 bg-secondary w-75  mt-3" />
                <div class="inclusive-holder mt-3 d-flex justify-content-lg-around">
                    <div class="form-check form-check-inline m-1">
                        <input class="form-check-input" type="radio" name="allinclusive" id="yes" value="true">
                        <label class="form-check-label" asp-for="AllInclusive">Yes</label>
                    </div>
                    <div class="form-check form-check-inline m-1">
                        <input class="form-check-input" type="radio" name="allinclusive" id="no" value="false">
                        <label class="form-check-label" asp-for="AllInclusive">No</label>
                    </div>
                </div>
                <hr class="hr-2 bg-dark w-75 mt-3" />
            </div>
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn hotel-bg-color text-white bg-primary">Create</button>
            </div>
    </form>
</div>

