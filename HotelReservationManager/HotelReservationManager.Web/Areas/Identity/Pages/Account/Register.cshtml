@page
@model RegisterModel
<div class="container">
    <div class="mt-3">
        <h1 class="text-center text-primary">Register</h1>
        <hr class="bg-secondary half-width hr-2" />
        <form class="mx-auto half-width" method="post">
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input type="text" class="form-control" id="username" placeholder="Username..." asp-for="Input.Username">
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input type="password" class="form-control" id="password" placeholder="Password..." asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Firstname"></label>
                <input type="text" class="form-control" id="firstname" placeholder="First Name..." asp-for="Input.Firstname">
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Middlename"></label>
                <input type="text" class="form-control" id="middlename" placeholder="Middle Name..." asp-for="Input.Middlename">
                <span asp-validation-for="Input.Middlename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Lastname"></label>
                <input type="text" class="form-control" id="lastname" placeholder="Last Name..." asp-for="Input.Lastname">
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input type="email" class="form-control" id="email" placeholder="Email..." asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PersonalInditification"></label>
                <input type="number" class="form-control" id="personalinditification" placeholder="Personal Inditification..." asp-for="Input.PersonalInditification">
                <span asp-validation-for="Input.PersonalInditification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input type="number" class="form-control" id="phonenumber" placeholder="Phone Number..." asp-for="Input.PhoneNumber">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfEmployed"></label>
                <input type="date" class="form-control" id="dateofemployed" placeholder="Date Of Employed..." asp-for="Input.DateOfEmployed">
                <span asp-validation-for="Input.DateOfEmployed" class="text-danger"></span>
            </div>
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn hotel-bg-color text-white bg-primary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

