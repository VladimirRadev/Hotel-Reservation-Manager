@page
@model HotelReservationManager.Web.Areas.Identity.Pages.ReservationList.EditModel
<br />
<h2 class="text-info">Edit Reservation</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Reservation.DataOfIncoming"></label>
            </div>
            <div class="col-6">
                <input asp-for="Reservation.DataOfIncoming" class="form-control" />
            </div>
            <span asp-validation-for="Reservation.DataOfIncoming" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Reservation.DateOfOutgoing"></label>
            </div>
            <div class="col-6">
                <input asp-for="Reservation.DateOfOutgoing" class="form-control" />
            </div>
            <span asp-validation-for="Reservation.DateOfOutgoing" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Reservation.includedBreakfast"></label>
            </div>
            <div class="col-6">
                <input asp-for="Reservation.includedBreakfast" class="form-control" />
            </div>
            <span asp-validation-for="Reservation.includedBreakfast" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Reservation.allInclusive"></label>
            </div>
            <div class="col-6">
                <input asp-for="Reservation.allInclusive" class="form-control" />
            </div>
            <span asp-validation-for="Reservation.allInclusive" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Reservation.AllAmount"></label>
            </div>
            <div class="col-6">
                <input asp-for="Reservation.AllAmount" class="form-control" />
            </div>
            <span asp-validation-for="Reservation.AllAmount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="ClientList/Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
